@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h3>
                <i class="bi bi-box-arrow-in-right"></i>
                Welcome Back
            </h3>
            <p class="auth-subtitle">Sign in to your account</p>
        </div>
        <div class="auth-body">
            <form asp-action="Login" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-group">
                    <label asp-for="Username" class="form-label">
                        <i class="bi bi-person"></i>
                        Username
                    </label>
                    <i class="input-icon bi bi-person"></i>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" required />
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock"></i>
                        Password
                    </label>
                    <i class="input-icon bi bi-lock"></i>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password"
                        required />
                    <button type="button" class="password-toggle" aria-label="Show password">
                        <i class="bi bi-eye"></i>
                    </button>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <button type="submit" class="auth-submit">
                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                </button>
            </form>
        </div>

        <div class="auth-footer">
            <p>Don't have an account?
                <a href="@Url.Action("Register", "Account")">Create one here</a>
            </p>
        </div>

        @* <div class="demo-credentials">
            <strong>Demo Credentials:</strong><br>
            Admin: username = <code>admin</code>, password = <code>admin123</code>
        </div> *@
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}