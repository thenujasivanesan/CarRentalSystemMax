@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h3>
                <i class="bi bi-person-plus"></i>
                Create Account
            </h3>
            <p class="auth-subtitle">Join our car rental service</p>
        </div>
        <div class="auth-body">
            <form asp-action="Register" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <h5 class="section-title">Personal Information</h5>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label">
                                <i class="bi bi-person"></i>
                                Full Name
                            </label>
                            <i class="input-icon bi bi-person"></i>
                            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="FullName" class="field-validation-error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i>
                                Email Address
                            </label>
                            <i class="input-icon bi bi-envelope"></i>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="bi bi-telephone"></i>
                                Phone Number
                            </label>
                            <i class="input-icon bi bi-telephone"></i>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NICNumber" class="form-label">
                                <i class="bi bi-card-text"></i>
                                NIC Number
                            </label>
                            <i class="input-icon bi bi-card-text"></i>
                            <input asp-for="NICNumber" class="form-control" placeholder="Enter your NIC number" />
                            <span asp-validation-for="NICNumber" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="form-label">
                        <i class="bi bi-geo-alt"></i>
                        Address
                    </label>
                    <i class="input-icon bi bi-geo-alt"></i>
                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter your full address"
                        style="padding-left: 3rem;"></textarea>
                    <span asp-validation-for="Address" class="field-validation-error"></span>
                </div>

                <hr style="border-color: rgba(255, 255, 255, 0.2); margin: 2rem 0;">
                <h5 class="section-title">Account Information</h5>

                <div class="form-group">
                    <label asp-for="Username" class="form-label">
                        <i class="bi bi-person-circle"></i>
                        Username
                    </label>
                    <i class="input-icon bi bi-person-circle"></i>
                    <input asp-for="Username" class="form-control" placeholder="Choose a username" />
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock"></i>
                                Password
                            </label>
                            <i class="input-icon bi bi-lock"></i>
                            <input asp-for="Password" class="form-control" type="password"
                                placeholder="Choose a password (min 6 characters)" />
                            <button type="button" class="password-toggle" aria-label="Show password">
                                <i class="bi bi-eye"></i>
                            </button>
                            <span asp-validation-for="Password" class="field-validation-error"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock"></i>
                                Confirm Password
                            </label>
                            <i class="input-icon bi bi-lock"></i>
                            <input asp-for="ConfirmPassword" class="form-control" type="password"
                                placeholder="Confirm your password" />
                            <button type="button" class="password-toggle" aria-label="Show password">
                                <i class="bi bi-eye"></i>
                            </button>
                            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="auth-submit">
                    <i class="bi bi-person-plus"></i> Create Account
                </button>
            </form>
        </div>

        <div class="auth-footer">
            <p>Already have an account?
                <a href="@Url.Action("Login", "Account")">Login here</a>
            </p>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}