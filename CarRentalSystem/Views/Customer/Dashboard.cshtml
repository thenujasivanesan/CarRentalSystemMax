@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="customer-dashboard-header">
    <h2 class="customer-dashboard-title"><i class="bi bi-person-circle"></i> Customer Dashboard</h2>
    <div class="customer-welcome"><i class="bi bi-person-check"></i> Welcome, @Context.Session.GetString("Username")</div>
</div>

<!-- Statistics Cards -->
<div class="customer-stats-grid">
    <div class="customer-stat-card bookings">
        <div class="customer-stat-content">
            <div class="customer-stat-info">
                <h4>@ViewBag.TotalBookings</h4>
                <p>Total Bookings</p>
            </div>
            <div class="customer-stat-icon">
                <i class="bi bi-calendar-check"></i>
            </div>
        </div>
    </div>

    <div class="customer-stat-card spending">
        <div class="customer-stat-content">
            <div class="customer-stat-info">
                <h4>$@ViewBag.TotalSpent.ToString("F2")</h4>
                <p>Total Spent</p>
            </div>
            <div class="customer-stat-icon">
                <i class="bi bi-currency-dollar"></i>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="customer-quick-actions">
    <div class="customer-actions-card">
        <div class="customer-actions-header">
            <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
        </div>
        <div class="customer-actions-body">
            <div class="customer-actions-grid">
                <a href="@Url.Action("Index", "Home")" class="customer-action-btn primary">
                    <i class="bi bi-search"></i>
                    <span>Browse Cars</span>
                </a>
                <a href="@Url.Action("MyBookings", "Bookings")" class="customer-action-btn info">
                    <i class="bi bi-calendar-check"></i>
                    <span>My Bookings</span>
                </a>
                <a href="@Url.Action("Profile", "Customer")" class="customer-action-btn warning">
                    <i class="bi bi-person-circle"></i>
                    <span>My Profile</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Bookings -->
<div class="customer-recent-bookings">
    <div class="customer-bookings-card">
        <div class="customer-bookings-header">
            <h5><i class="bi bi-clock-history"></i> Recent Bookings</h5>
        </div>
        <div class="customer-bookings-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="customer-table table table-striped table-hover w-100">
                        <thead>
                            <tr>
                                <th>Booking ID</th>
                                <th>Car</th>
                                <th>Pickup Date</th>
                                <th>Return Date</th>
                                <th>Total Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="customer-booking-id">#@booking.BookingID</span>
                                    </td>
                                    <td>
                                        <div class="customer-car-info">
                                            <strong>@booking.Car.CarName</strong>
                                            <small class="text-muted d-block">@booking.Car.CarModel</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="customer-date">@booking.PickupDate.ToString("MMM dd, yyyy")</span>
                                    </td>
                                    <td>
                                        <span class="customer-date">@booking.ReturnDate.ToString("MMM dd, yyyy")</span>
                                    </td>
                                    <td>
                                        <span class="customer-cost">$@booking.TotalCost.ToString("F2")</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="customer-view-all">
                    <a href="@Url.Action("MyBookings", "Bookings")" class="customer-view-all-btn">
                        View All Bookings <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            }
            else
            {
                <div class="customer-empty-state">
                    <i class="bi bi-calendar-x"></i>
                    <h4>No bookings yet</h4>
                    <p>Start by browsing our available cars</p>
                    <a href="@Url.Action("Index", "Home")" class="customer-action-btn primary">
                        <i class="bi bi-search"></i> Browse Cars
                    </a>
                </div>
            }
        </div>
    </div>
</div>
