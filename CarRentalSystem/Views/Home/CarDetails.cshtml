@model Car
@{
    ViewData["Title"] = "Car Details - " + Model.CarName;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item active">@Model.CarName</li>
    </ol>
</nav>

<div class="car-details-container">
    <div class="car-image-section">
        <div class="car-image-card">
            <div class="car-main-image">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.CarName">
                }
                else if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Url.Content("~/uploads/" + Model.ImagePath)" alt="@Model.CarName">
                }
                else
                {
                    <div class="placeholder">
                        <i class="bi bi-car-front"></i>
                        <p>No Image Available</p>
                    </div>
                }
            </div>

            <!-- Image Gallery (if multiple images were available) -->
            <div class="image-gallery" style="display: none;">
                <div class="gallery-thumb active">
                    <img src="@Model.ImageUrl" alt="@Model.CarName">
                </div>
                <!-- Additional thumbnails would go here -->
            </div>
        </div>
    </div>

    <div class="car-info-section">
        <div class="car-info-card">
            <div class="car-info-header">
                <h2>@Model.CarName</h2>
            </div>
            <div class="car-info-body">
                <div class="car-specs">
                    <div class="spec-row">
                        <div class="spec-label">
                            <i class="bi bi-tag"></i>
                            Brand:
                        </div>
                        <div class="spec-value">@Model.Brand</div>
                    </div>

                    <div class="spec-row">
                        <div class="spec-label">
                            <i class="bi bi-calendar"></i>
                            Model Year:
                        </div>
                        <div class="spec-value">@Model.CarModel</div>
                    </div>

                    <div class="spec-row">
                        <div class="spec-label">
                            <i class="bi bi-people"></i>
                            Seats:
                        </div>
                        <div class="spec-value">@Model.Seats passengers</div>
                    </div>

                    <div class="spec-row">
                        <div class="spec-label">
                            <i class="bi bi-check-circle"></i>
                            Status:
                        </div>
                        <div class="spec-value">
                            <span class="badge @(Model.IsAvailable ? "status-available" : "status-booked")">
                                @(Model.IsAvailable ? "Available" : "Booked")
                            </span>
                        </div>
                    </div>
                </div>

                <div class="pricing-section">
                    <div class="price-display">$50.00</div>
                    <div class="price-period">per day</div>
                </div>

                <div class="action-buttons">
                    @if (Model.IsAvailable)
                    {
                        @if (ViewBag.IsCustomer)
                        {
                            <a href="@Url.Action("Book", "Bookings", new { carId = Model.CarID })" class="btn btn-book">
                                <i class="bi bi-calendar-check"></i> Book This Car
                            </a>
                        }
                        else if (!ViewBag.IsLoggedIn)
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-login">
                                <i class="bi bi-box-arrow-in-right"></i> Login to Book
                            </a>
                            <small class="text-muted text-center">
                                Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a>
                            </small>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> Only customers can book cars.
                            </div>
                        }
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>
                            <i class="bi bi-x-circle"></i> Currently Booked
                        </button>
                    }

                    <a href="@Url.Action("Index", "Home")" class="btn btn-back">
                        <i class="bi bi-arrow-left"></i> Back to Cars
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="rental-info-section">
    <div class="rental-info-card">
        <div class="rental-info-header">
            <h4><i class="bi bi-info-circle"></i> Rental Information</h4>
        </div>
        <div class="rental-info-body">
            <div class="rental-terms">
                <div class="terms-section">
                    <h6>Rental Terms:</h6>
                    <ul class="terms-list">
                        <li>Minimum rental period: 1 day</li>
                        <li>Daily rate: $50.00</li>
                        <li>Valid driver's license required</li>
                        <li>Minimum age: 21 years</li>
                    </ul>
                </div>
                <div class="terms-section">
                    <h6>What's Included:</h6>
                    <ul class="terms-list">
                        <li>Comprehensive insurance</li>
                        <li>24/7 roadside assistance</li>
                        <li>Free cancellation up to 24 hours</li>
                        <li>Unlimited mileage</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>