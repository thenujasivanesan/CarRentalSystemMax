                    <a class="hero-cta primary" href="@Url.Action("Register", "Account")" role="button">
                        Get Started <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                    <a class="hero-cta secondary" href="@Url.Action("Cars", "Home")" role="button">
                        Browse Cars <i class="bi bi-car-front ms-2"></i>
                    </a>
