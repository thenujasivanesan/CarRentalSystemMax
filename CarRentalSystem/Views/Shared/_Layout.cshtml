<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Rental Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Main Theme CSS -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Page-specific CSS -->
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home")
    {
        <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "CarDetails")
    {
        <link rel="stylesheet" href="~/css/car-details.css" asp-append-version="true" />
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Bookings")
    {
        <link rel="stylesheet" href="~/css/booking.css" asp-append-version="true" />
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Account")
    {
        <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Customer")
    {
        <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Admin")
    {
        <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard")
    {
        <link rel="stylesheet" href="~/css/customer-dashboard.css" asp-append-version="true" />
    }
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="bi bi-car-front"></i> Car Rental System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Cars", "Home")">
                                <i class="bi bi-car-front"></i> Cars
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            var role = Context.Session.GetString("UserRole");
                            var username = Context.Session.GetString("Username");

                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Cars")">
                                        <i class="bi bi-car-front"></i> Manage Cars
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Customers", "Admin")">
                                        <i class="bi bi-people"></i> Customers
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("All", "Bookings")">
                                        <i class="bi bi-calendar-check"></i> Bookings
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Reports")">
                                        <i class="bi bi-file-earmark-text"></i> Reports
                                    </a>
                                </li>
                            }
                            else if (role == "Customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard", "Customer")">
                                        <i class="bi bi-person-circle"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("MyBookings", "Bookings")">
                                        <i class="bi bi-calendar-check"></i> My Bookings
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Profile", "Customer")">
                                        <i class="bi bi-person-gear"></i> Profile
                                    </a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @username
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Account")">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <!-- About Section -->
                <div class="col-md-4 footer-col">
                    <h5>Car Rental System</h5>
                    <p>Your trusted partner for affordable and reliable car rentals. We make your journey safe and comfortable.</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 footer-col">
                    <h5>Quick Links</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Pages" asp-action="Privacy">Privacy Policy</a></li>
                        <li><a asp-controller="Pages" asp-action="Terms">Terms & Conditions</a></li>
                        <li><a asp-controller="Pages" asp-action="About">About Us</a></li>
                        <li><a asp-controller="Pages" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4 footer-col">
                    <h5>Contact Us</h5>
                    <p><i class="bi bi-geo-alt-fill"></i> 123 Main Street, Colombo, Sri Lanka</p>
                    <p><i class="bi bi-telephone-fill"></i> ‪+94 71 123 4567‬</p>
                    <p><i class="bi bi-envelope-fill"></i> support@carrentalsystem.com</p>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-12 text-center">
                    <p>&copy; 2024 Car Rental Management System. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Page-specific JavaScript -->
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home")
    {
        <script src="~/js/home.js" asp-append-version="true"></script>
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "CarDetails")
    {
        <script src="~/js/car-details.js" asp-append-version="true"></script>
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Bookings")
    {
        <script src="~/js/booking.js" asp-append-version="true"></script>
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Account")
    {
        <script src="~/js/auth.js" asp-append-version="true"></script>
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Customer")
    {
        <script src="~/js/auth.js" asp-append-version="true"></script>
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Admin")
    {
        <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>
    }
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard")
    {
        <script src="~/js/customer-dashboard.js" asp-append-version="true"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
